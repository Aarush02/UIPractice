<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F5F6F8"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/text_view_logo">
    <TextView
        android:id="@+id/text_view_login_page_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="AM"
        android:fontFamily="cursive"
        android:textColor="#FF031D"
        android:textSize="150sp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">
        <Button
            android:id="@+id/button_login_item_display"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="LogIn"
            android:textColor="#ffffff"
            android:background="@drawable/button_login_design"
            android:padding="10sp"
            android:layout_gravity="start"
            android:layout_marginEnd="5sp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/button_sign_up_item_display"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="Sign UP"
            android:textColor="#ffffff"
            android:background="@drawable/button_login_design"
            android:padding="10sp"
            android:layout_marginStart="5sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55sp">
        <EditText
            android:id="@+id/edit_text_login_page_enter_email"
            style="@style/edit_email_design"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="5sp"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/email_design_login_display"
            />
        <EditText
            android:id="@+id/edit_text_login_page_enter_password"
            style="@style/edit_email_design"
            android:hint="Enter your Password"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="5sp"
            android:inputType="textPassword"
            android:background="@drawable/email_design_login_display"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/text_view_forget_your_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget your password?"
            android:fontFamily="sans-serif"
            android:textColor="#FF031D"
            android:textSize="20sp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10sp"
            android:clickable="true"
            android:focusable="true" />
        <Button
            android:id="@+id/button_login"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="LogIn"
            android:textColor="#ffffff"
            android:background="@drawable/button_login_design"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
            android:padding="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/text_view_login_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----------or----------"
            android:fontFamily="sans-serif"
            android:textColor="#591D39"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:clickable="false"
            />
        <Button
            android:id="@+id/button_facebook_login"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10sp"
            android:layout_gravity="end"
            android:text="f"
            android:fontFamily="cursive"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_facebook_login"
            android:padding="10sp"
            />
        <com.google.android.gms.common.SignInButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_google_login"
            android:layout_gravity="right" />
    </LinearLayout>


</LinearLayout>