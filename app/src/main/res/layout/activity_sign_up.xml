<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    android:background="#F1FA08">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/text_view_logo">
        <TextView
            android:id="@+id/text_view_sign_up_page_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AM"
            android:fontFamily="cursive"
            android:textColor="#FF031D"
            android:textSize="150sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">
        <Button
            android:id="@+id/button_log_in_item_display"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="LogIn"
            android:textColor="#ffffff"
            android:background="@drawable/rectangle_design_login_display"
            android:padding="10sp"
            android:layout_gravity="left"
            android:layout_marginEnd="5sp"
            android:visibility="visible"
            />
        <Button
            android:id="@+id/button_sign_up_item_display"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="Sign UP"
            android:textColor="#ffffff"
            android:background="@drawable/rectangle_design_login_display"
            android:padding="10sp"
            android:layout_marginStart="5sp"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/edit_text_sign_up_page_enter_first_name"
            android:layout_width="170sp"
            android:layout_height="45sp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/email_design_login_display"
            style="@style/edit_email_design"/>
        <EditText
            android:id="@+id/edit_text_sign_up_page_enter_last_name"
            android:layout_width="170sp"
            android:layout_height="45sp"
            android:hint="Last Name"
            android:background="@drawable/email_design_login_display"
            style="@style/edit_email_design"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="5sp"
            android:inputType="textPersonName"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp">
        <EditText
            android:id="@+id/edit_text_sign_up_page_enter_email"
            style="@style/edit_email_design"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="5sp"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/email_design_login_display"
            />
        <EditText
            android:id="@+id/edit_text_sign_up_page_enter_password"
            style="@style/edit_email_design"
            android:hint="Enter your Password"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="5sp"
            android:inputType="textPassword"
            android:background="@drawable/email_design_login_display"
            android:layout_marginTop="25dp"
            />
        <EditText
            android:id="@+id/edit_text_sign_up_page_enter__confirm_password"
            style="@style/edit_email_design"
            android:hint="Confirm your Password"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="5sp"
            android:inputType="textPassword"
            android:background="@drawable/email_design_login_display"
            android:layout_marginTop="25dp"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_box_sign_up_page_terms_and_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I accept the Terms and Condition"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:checked="false"
            android:textColor="#FF031D"
            android:buttonTint="#FF031D"
            />
        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="Sign Up"
            android:textColor="#ffffff"
            android:background="@drawable/button_login_design"
            android:padding="10sp"
            />
    </LinearLayout>

</LinearLayout>