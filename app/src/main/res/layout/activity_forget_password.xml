<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ForgetPasswordActivity"
    android:background="#F5F6F8"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/text_view_logo">
        <TextView
            android:id="@+id/text_view_login_page_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AM"
            android:fontFamily="cursive"
            android:textColor="#FF031D"
            android:textSize="150sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30sp">
        <TextView
            android:layout_width="360sp"
            android:layout_height="wrap_content"
            android:text="Enter the email address you used to create your account and we will email you a link to reset your password"
            android:textSize="18sp"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/edit_text_forget_password_page_enter_email"
            style="@style/edit_email_design"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:layout_marginTop="30sp"
            android:drawablePadding="5sp"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/email_design_login_display"
            />
        <Button
            android:id="@+id/button_forget_password"
            android:layout_width="360sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:text="Send Email"
            android:gravity="center"
            android:layout_marginEnd="25sp"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
            android:drawablePadding="5sp"
            android:background="@drawable/button_login_design"
            />
    </LinearLayout>

</LinearLayout>